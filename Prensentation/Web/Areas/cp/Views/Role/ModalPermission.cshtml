@model List<PermissionViewModel>

<form asp-area="cp" asp-controller="Role" asp-action="UpdatePermission" method="post">
    <input type="hidden" name="Name" value="@ViewBag.role">
    <div class="accordion" id="accordionExample">
        @for (int i = 0; i < Model.Count; i++)
        {
            <input type="hidden" asp-for="@Model[i].GroupPermission">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-toggle="collapse"
                        data-target="#@Model[i].GroupPermission" aria-expanded="true" aria-controls="collapseOne">
                        @Model[i].GroupPermission
                    </button>
                </h2>
                <div id="@Model[i].GroupPermission" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                    data-parent="#@Model[i].GroupPermission">
                    <div class="accordion-body">
                        @for (int j = 0; j < Model[i].RoleClaims.Count; j++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].RoleClaims[j].Name" />
                                <input type="hidden" asp-for="@Model[i].RoleClaims[j].Value" />
                                <input type="checkbox" asp-for="@Model[i].RoleClaims[j].Selected"  class="form-check-input" />
                                <label class="" for="btncheck1">@Model[i].RoleClaims[j].Name</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</form>