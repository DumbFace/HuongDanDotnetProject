@{
    var lstCategory = Enum.GetValues(typeof(CategoryTopic)).Cast<CategoryTopic>().ToList();
}

<nav id="sidebar" class="">
    <div class="p-4 pt-5">
        <ul class="list-unstyled components mb-5">
            <li class="active">
                <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">Article</a>
                <ul class="list-unstyled collapse show" id="homeSubmenu" style="">
                    @foreach (var item in lstCategory)
                    {
                    <li>
                        <a href="/cp/topic?whichTopic=@item">@item</a>
                    </li>
                    }
                </ul>
            </li>
            <li>
                <a href="/cp/category">Category</a>
            </li>
            <li>
                <a href="/cp/sitemap">Create Sitemap</a>
            </li>
        </ul>
        <div class="footer">
            <p>
                Copyright Â© @DateTime.Now.Year All rights reserved

            </p>
        </div>
    </div>
</nav>

