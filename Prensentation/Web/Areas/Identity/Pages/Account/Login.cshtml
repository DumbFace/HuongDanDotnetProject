@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}



<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/login/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/css/login/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/login/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="/css/login/style.css">

    <title>Login #10</title>
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <span class="d-block text-center my-4 text-muted"> or sign in with</span>
                    <div class="social-login text-center">
                        <a href="#" class="facebook btn btn-block">
                            <span class="icon-facebook mr-3"></span>
                        </a>
                        <a href="#" class="twitter btn btn-block">
                            <span class="icon-twitter mr-3"></span>
                        </a>
                        <a href="#" class="google btn btn-block">
                            <span class="icon-google mr-3"></span>
                        </a>
                    </div>

                </div>
                <div class="col-md-2 text-center">
                    &mdash; or &mdash;
                </div>
                <div class="col-md-5 contents">
                    <div class="form-block">
                        <div class="mb-4">
                            <h3>Sign In to <strong>Colorlib</strong></h3>
                            <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur
                                adipisicing.</p>
                        </div>
                        <form id="account" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group first">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                            </div>
                            <div class="form-group last mb-4">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>

                            <div class="d-flex mb-3 align-items-center">
                                <label class="control control--checkbox mb-0"><span class="caption">Remember me</span>
                                    <input asp-for="Input.RememberMe" />
                                    <div class="control__indicator"></div>
                                </label>
                            </div>

                            <input type="submit" value="Log In"
                                class="btn btn-pill text-white btn-block btn-primary mb-2">

                            <div class="d-flex flex-column">
                                <span class="mr-auto">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-pass">Forgot
                                        Password</a>
                                </span>
                                <span class="mr-auto">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                        class="forgot-pass">Register</a>
                                </span>
                                <span class="mr-auto">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                        class="forgot-pass">Resend Email Confirmation</a>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
